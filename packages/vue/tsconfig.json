{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist/types",
    "declaration": true,
    "declarationDir": "./dist/types",
    "emitDeclarationOnly": true,
    "noEmit": false,
    "declarationMap": true,
    "module": "ES2020",
    "target": "ES2020",
    "jsx": "preserve",
    "skipLibCheck": true,
    "paths": {
      "@smilodon/core": ["../core/src/index.ts"]
    }
  },
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/*.d.ts", "**/*.test.ts", "node_modules", "dist", "../core/**", "../../node_modules"]
}
