{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": ["eslint:recommended"],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "rules": {
        "no-unused-vars": "off",
        "@typescript-eslint/no-unused-vars": ["warn", { "argsIgnorePattern": "^_" }]
      }
    }
  ],
  "ignorePatterns": [
    "**/dist/**",
    "**/*.d.ts"
  ],
  "rules": {
    "no-unused-vars": ["warn"],
    "no-constant-condition": ["warn"]
  }
}
