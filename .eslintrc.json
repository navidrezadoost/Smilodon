{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["**/*.ts", "**/*.tsx"],
      "parser": "@typescript-eslint/parser",
      "plugins": ["@typescript-eslint"],
      "extends": ["eslint:recommended"],
      "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
      },
      "rules": {
        "no-unused-vars": "off",
        "no-undef": "off",
        "@typescript-eslint/no-unused-vars": "off"
      }
    },
    {
      "files": [
        "**/*.config.js",
        "**/*.config.ts",
        "**/*.config.cjs",
        "**/*.config.mjs",
        "**/scripts/**/*.{js,ts}",
        "**/tests/**/*.{js,ts}",
        "**/*.spec.{js,ts}",
        "**/*.spec.{tsx,jsx}",
        "**/*.cjs"
      ],
      "env": {
        "node": true
      },
      "globals": {
        "__dirname": "readonly",
        "process": "readonly",
        "global": "readonly"
      }
    }
  ],
  "ignorePatterns": [
    "**/dist/**",
    "**/*.d.ts"
  ],
  "rules": {
    "no-unused-vars": ["warn"],
    "no-constant-condition": ["warn"]
  }
}
